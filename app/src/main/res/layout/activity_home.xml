<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/puppy_3" />

    <TextView
        android:id="@+id/idText"
        android:fontFamily="@font/yeongdeok_snow_crab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:text="아이디: Yoon" />

    <TextView
        android:id="@+id/textView8"
        android:fontFamily="@font/yeongdeok_snow_crab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@id/idText"
        android:text="이름: 남윤희" />

    <TextView
        android:id="@+id/textView9"
        android:fontFamily="@font/yeongdeok_snow_crab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@id/textView8"
        android:text="나이: 25" />

    <TextView
        android:id="@+id/textView10"
        android:fontFamily="@font/yeongdeok_snow_crab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@id/textView9"
        android:text="MBTI: ENFP" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView10"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_home">

        <TextView
            android:id="@+id/TxtClose"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Close"
            android:textColor="@drawable/btn_text"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/closeImg"
            android:layout_width="99dp"
            android:layout_height="78dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/TxtClose"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/btn_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>